<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".menuActivity">

    <Button
        android:id="@+id/btnExpense"
        android:layout_width="204dp"
        android:layout_height="364dp"
        android:height="160dp"
        android:text="Track Expenses"
        app:layout_constraintBottom_toTopOf="@+id/btnLoans"
        app:layout_constraintEnd_toStartOf="@+id/btnBudgets"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnBudgets"
        android:layout_width="200dp"
        android:layout_height="364dp"
        android:width="160dp"
        android:height="160dp"
        android:text="Add budgets"
        app:layout_constraintBottom_toTopOf="@+id/btnGoal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnExpense"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnGoal"
        android:layout_width="200dp"
        android:layout_height="364dp"
        android:width="160dp"
        android:height="160dp"
        android:text="Add goals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnLoans"
        app:layout_constraintTop_toBottomOf="@+id/btnBudgets"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnLoans"
        android:layout_width="204dp"
        android:layout_height="364dp"
        android:width="160dp"
        android:height="160dp"
        android:text="track loans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnGoal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExpense"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>